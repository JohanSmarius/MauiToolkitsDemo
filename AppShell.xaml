<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiToolkitsDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiToolkitsDemo"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Products" FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Products">
            <ShellContent Title="Products" Route="RecipesPage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Shopping cart">
            <ShellContent Title="Shopping cart" Route="ShoppingCart" ContentTemplate="{DataTemplate local:ShoppingCart}" />
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Received order" FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Received order">
            <ShellContent Title="Sign order" Route="SignOrder" ContentTemplate="{DataTemplate local:SignOrder}" />
        </Tab>
        <Tab Title="Camera">
            <ShellContent Title="Camera" Route="Camera" ContentTemplate="{DataTemplate local:Camera}" />
        </Tab>
        <Tab Title="Video">
            <ShellContent Title="Video" Route="Video" ContentTemplate="{DataTemplate local:ProductVideo}" />
        </Tab>
    </FlyoutItem>

</Shell>

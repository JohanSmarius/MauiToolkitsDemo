<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:MauiToolkitsDemo.ViewModels"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"   
             x:DataType="viewmodel:SignOrderViewModel"
             x:Class="MauiToolkitsDemo.SignOrder"
             Title="Sign for order received">
    
    <ContentPage.Content>

        <VerticalStackLayout>
                <toolkit:DrawingView
                    Lines="{Binding DrawingLines}"
                    LineColor="Red"
                    LineWidth="5"
                    IsMultiLineModeEnabled="True"
                    ShouldClearOnFinish="false"
                    HorizontalOptions="Fill"
                    VerticalOptions="FillAndExpand" 
                    HeightRequest="500"
                    />
                
                <Button Text="Save" Command="{Binding ReceiveConfirmedCommand}"  Margin="50"></Button>
        </VerticalStackLayout>
                
    </ContentPage.Content>
</ContentPage>